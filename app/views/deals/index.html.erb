<h2 class="title has-text-info">Transactions - <%= @category.name %></h2>
<h4 class="subtitle has-text-primary">Total: <%= number_to_currency(@category.deals.sum('amount'), unit: '$', precision: 2) %></h4>
<div class="columns is-multiline">
  <% @deals.each do |deal| %>
    <%= render deal %>
  <% end %>
</div>
