<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-10">
      <div class="card-body">
        <h5 class="card-title"><%= link_to deal.name, category_deal_path(1, deal.id), class: "text-decoration-none" %></h5>
        <p class="card-text"><small class="text-muted"><%= deal.created_at.strftime('%d %b %Y') %></small></p>
      </div>
    </div>
    <div class="col-md-2">
      <div class="card-body">
        <p class="card-text"><small class="text-muted"><%= number_to_currency(deal.amount, unit: '$', precision: 2) %></small></p>
      </div>
    </div>
  </div>
</div>
