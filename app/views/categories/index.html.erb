<% if user_signed_in? %>
  <div class="d-flex w-100">
    <ul class="nav justify-content-between w-100 px-2 pt-2">
      <li class="nav-item p-3">
        <%= button_to 'Sign out', destroy_user_session_path, method: :delete, class: "nav-link bg-transparent border-0 text-decoration-none text-white" %>
      </li>
      <li class="nav-item p-3">
        <%= link_to 'Edit profile', edit_user_registration_path, class: "nav-link text-decoration-none text-white" %>
      </li>
      <li class="nav-item">
        <p class="nav-link link-light">CATEGORIES</p>
      </li>
      <li class="nav-item link-light">
        <i class="bi bi-search"></i>
      </li>
    </ul>
  </div>

  <%= render "partials/message" %>

  <div id="categories">
    <% @categories.each do |category| %>
      <%= render category %>
    <% end %>
  </div>

  <%= link_to "Add a new category", new_category_path %>
<% else %>
  <%= render 'partials/start' %>
<% end %>
