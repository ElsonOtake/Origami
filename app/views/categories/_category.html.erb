<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <%= image_tag(category.icon.file_name, alt: category.icon.name, width: "200") %>
    </div>
    <div class="col-md-6">
      <div class="card-body">
        <h5 class="card-title"><%= link_to category.name, category_deals_path(category.id), class: "text-decoration-none" %></h5>
      </div>
    </div>
    <div class="col-md-2">
      <div class="card-body">
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
    </div>
  </div>
</div>
