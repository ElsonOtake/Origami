<div class="card m-3">
  <div class="row g-0 m-2">
    <div class="col-md-4">
      <%= image_tag(category.icon.file_name, alt: category.icon.name, width: "100") %>
    </div>
    <div class="col-md-6">
      <div class="card-body">
        <h5 class="card-title"><%= link_to category.name, category_deals_path(category.id), class: "text-decoration-none fs-1 regular" %></h5>
      </div>
    </div>
    <div class="col-md-2">
      <div class="card-body">
        <p class="card-text fs-2 regular"><%= number_to_currency(category.deals.sum('amount'), unit: '$', precision: 2) %></p>
      </div>
    </div>
  </div>
</div>
