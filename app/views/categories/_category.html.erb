<div class="card m-3">
  <div class="d-flex justify-content-between align-items-center m-2">
    <div>
      <%= image_tag(category.icon.file_name, alt: category.icon.name, width: "50") %>
    </div>
    <div>
      <div class="card-body">
        <h5 class="card-title"><%= link_to category.name, category_deals_path(category.id), class: "text-decoration-none fs-4 regular" %></h5>
      </div>
    </div>
    <div>
      <div class="card-body">
        <p class="card-text fs-5 regular"><%= number_to_currency(category.deals.sum('amount'), unit: '$', precision: 2) %></p>
      </div>
    </div>
  </div>
</div>
