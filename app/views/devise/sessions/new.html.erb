<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="d-flex w-100">
    <ul class="nav justify-content-between w-100 px-2 pt-2">
      <li class="nav-item link-light">
        <%= link_to '&larr;'.html_safe, root_path, class: "text-decoration-none text-white" %>
      </li>
      <li class="nav-item">
        <p class="nav-link link-light">LOGIN</p>
      </li>
      <li class="nav-item link-light">
        <%= f.submit "Log In", class:"nav-link bg-transparent border-0 text-decoration-none text-white" %>
      </li>
    </ul>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.email_field :email, class: "form-control border-0 border-bottom rounded-0 mx-3 px-0 w-100", placeholder: "Email" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, class: "form-control border-0 border-bottom rounded-0 mx-3 px-0 w-100", placeholder: "Password" %>
  </div>

  <div class="text-center w-100 pt-2">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-decoration-none text-reset" %>
    <% end %>
  </div>
<% end %>

