<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%# <nav class="navbar navbar-expand text-white px-3 mb-3 justify-content-between">
    <div class="collapse navbar-collapse" id="navbarNav">
      <div class="navbar-nav"> %>
        <%#= link_to '&larr;'.html_safe, root_path, class: "text-decoration-none text-white fs-2" %>
        <%#= f.submit "Log In", class:"nav-link bg-transparent border-0 text-decoration-none mx-2" %>
      <%# </div>
    </div>
    <span class="navbar-brand mb-0 fs-4 text-white mx-3">LOGIN</span>
  </nav> %>

  <div class="field">
    <%= f.label :email, class: "label" %>
    <div class="control">
      <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "Email" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password, class: "label" %>
    <div class="control">
      <%= f.password_field :password, class: "input", autofocus: true, autocomplete: "Password" %>
    </div>
  </div>

  <div class="control buttons actions">
    <%= f.submit "Log In", class:"button is-link is-light" %>
    <%= link_to "Back", root_path, class: "button is-link is-light" %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "button is-danger is-light" %>
  </div>
<% end %>

