<div class="d-flex w-100">
  <ul class="nav justify-content-between w-100 px-2">
    <li class="nav-item">
      <a class="nav-link" href="#">&larr;</a>
    </li>
    <li class="nav-item">
      <p class="nav-link">REGISTER</p>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">Next</a>
    </li>
  </ul>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.text_field :name, class: "form-control border-0 border-bottom rounded-0 mx-3 px-0 w-100", placeholder: "Full name" %>
  </div>

  <div class="form-group">
    <%= f.email_field :email, class: "form-control border-0 border-bottom rounded-0 mx-3 px-0 w-100", placeholder: "Email" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, class: "form-control border-0 border-bottom rounded-0 mx-3 px-0 w-100", placeholder: "Password" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, class: "form-control border-0 rounded-0 mx-3 px-0 w-100", placeholder: "Password" %>
  </div>

  <div class="form-group mx-3">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Next", class:"btn btn-secondary m-2 w-100" %>
  </div>
<% end %>
