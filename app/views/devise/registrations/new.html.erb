<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%# <nav class="navbar navbar-expand text-white px-3 mb-3 justify-content-between">
    <div class="collapse navbar-collapse" id="navbarNav">
      <div class="navbar-nav"> %>
        <%#= link_to '&larr;'.html_safe, root_path, class: "text-decoration-none text-white fs-2" %>
        <%#= f.submit "Next", class:"nav-link bg-transparent border-0 text-decoration-none mx-2" %>
      <%# </div>
    </div>
    <span class="navbar-brand mb-0 fs-4 text-white mx-3">REGISTER</span>
  </nav> %>

  <div class="field">
    <%= f.label :name, class: "label" %>
    <div class="control">
      <%= f.text_field :name, class: "input", autofocus: true, autocomplete: "name" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :email, class: "label" %>
    <div class="control">
      <%= f.email_field :email, class: "input", autocomplete: "email" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password, class: "label" %>
    <div class="control">
      <%= f.password_field :password, class: "input", autocomplete: "new-password" %>
    </div>
    <% if @minimum_password_length %>
      <span class="help has-text-danger"><%= @minimum_password_length %> characters minimum</span>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "label" %>
    <div class="control">
      <%= f.password_field :password_confirmation, class: "input", autocomplete: "new-password" %>
    </div>
  </div>

  <div class="control actions buttons">
    <%= f.submit "Sign up", class: "button is-link is-light" %>
    <%= link_to "Back", root_path, class: "button is-link is-light" %>
  </div>
<% end %>
