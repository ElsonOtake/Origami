<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <nav class="navbar navbar-expand text-white px-3 mb-3 justify-content-between">
    <div class="collapse navbar-collapse" id="navbarNav">
      <div class="navbar-nav">
        <%= link_to '&larr;'.html_safe, root_path, class: "text-decoration-none text-white fs-2" %>
        <%= f.submit "Next", class:"nav-link bg-transparent border-0 text-decoration-none mx-2" %>
      </div>
    </div>
    <span class="navbar-brand mb-0 fs-4 text-white mx-3">REGISTER</span>
  </nav>

  <%= render "partials/message" %>

  <div class="main">
    <div class="form-group">
      <%= f.text_field :name, class: "form-control border-0 border-bottom rounded-0 mx-3 px-0 w-100", placeholder: "Full name" %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, class: "form-control border-0 border-bottom rounded-0 mx-3 px-0 w-100", placeholder: "Email" %>
    </div>

    <% if @minimum_password_length %>
      <% @placeholder = "Password (#{@minimum_password_length.to_s} characters minimum)" %>
    <% else %>
      <% @placeholder = "Password" %>  
    <% end %>

    <div class="form-group">
      <%= f.password_field :password, class: "form-control border-0 border-bottom rounded-0 mx-3 px-0 w-100", placeholder: @placeholder %>

    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, class: "form-control border-0 rounded-0 mx-3 px-0 w-100", placeholder: @placeholder %>
    </div>
  </div>
<% end %>
