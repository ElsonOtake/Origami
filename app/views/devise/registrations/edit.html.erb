<h2 class="title has-text-info">Edit profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="field">
    <%= f.label :name, class: "label" %>
    <div class="control has-icons-left">
      <%= f.text_field :name, class: "input", autofocus: true, autocomplete: "name" %>
      <span class="icon is-small is-left">
        <i class="fas fa-user"></i>
      </span>
    </div>
  </div>

  <div class="field">
    <%= f.label :email, class: "label" %>
    <div class="control has-icons-left">
      <%= f.email_field :email, class: "input", autocomplete: "email" %>
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, class: "label" %>
    <div class="control has-icons-left">
      <%= f.password_field :password, class: "input", autocomplete: "new-password" %>
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
    </div>
    <% if @minimum_password_length %>
      <span class="help has-text-danger"><%= @minimum_password_length %> characters minimum</span>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "label" %>
    <div class="control has-icons-left">
      <%= f.password_field :password_confirmation, class: "input", autocomplete: "new-password" %>
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
    </div>
  </div>

  <div class="field">
    <%= f.label :current_password, class: "label" %>
    <div class="control has-icons-left">
      <%= f.password_field :current_password, class: "input", autocomplete: "current-password" %>
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
    </div>
    <span class="help has-text-info">We need your current password to confirm your changes</span>
  </div>

  <div class="control actions buttons">
    <%= f.submit "Edit profile", class: "button is-link is-light" %>
    <%= link_to "Back", root_path, class: "button is-link is-light" %>
  </div>
<% end %>
<br>
<p class="subtitle has-text-info">Unhappy?</p>
<% if cannot? :destroy , Customer %>
  <%= button_to registration_path(resource_name),
    class: "button is-danger is-light",
    disabled: true do
  %>
    <span>Cancel my account</span>
    <span class="icon is-small">
      <i class="fas fa-times"></i>
    </span>
  <% end %>
  <span class="help has-text-danger">You aren't allowed to cancel your account.</span>
<% else %>
  <%= button_to registration_path(resource_name),
    data: { turbo_confirm: "Are you sure?" , turbo_method: :delete },
    class: "button is-danger is-light" do
  %>
    <span>Cancel my account</span>
    <span class="icon is-small">
      <i class="fas fa-times"></i>
    </span>
  <% end %>
<% end %>