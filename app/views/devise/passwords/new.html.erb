<h2 class="title has-text-info">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="field">
      <%= f.label :email, class: "label" %>
      <div class="control">
        <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="control actions buttons">
      <%= f.submit "Send me reset password instructions", class: "button is-link is-light" %>
      <%= link_to "Back", root_path, class: "button is-link is-light" %>
    </div>
<% end %>
